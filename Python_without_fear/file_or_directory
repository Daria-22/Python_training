import os #import module which operates with operation system
dir = "Documents" # assign the folder "Documents" to variable dir
for name in os.listdir(dir):   #start iteration for each element of directory, which is generated by os.listdir(name of directory)
     fullname = os.path.join(dir, name)  # create a full name of file with directory, as we have only the name
     if os.path.isdir(fullname):     # confirm if it is a directory with isdir()
          print("{} is a directory".format(fullname))  # if true - print is  directry
     else:
          print("{} is a file".format(fullname))  $ if false - print is a file


#this code determines if the file is a directory or a file
# workws fine on my computer
